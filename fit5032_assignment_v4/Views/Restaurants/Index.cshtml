            @Html.DisplayNameFor(model => model.RestaurantStreet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantPostcode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantOwner.OwnerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantCountry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantSuburb)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantStreet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantPostcode)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RestaurantId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RestaurantId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RestaurantId })
        </td>
    </tr>
}

</table>
